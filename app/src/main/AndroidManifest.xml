<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ir.tapsell.sample">

    <application
        android:name=".TapsellApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RewardActivity"
            android:label="@string/reward" />

        <activity
            android:name=".InterstitialActivity"
            android:label="@string/interstitial" />

        <activity
            android:name=".navideAds.NativeActivity"
            android:label="@string/native_string" />

        <activity
            android:name=".navideAds.NativeBannerActivity"
            android:label="@string/native_banner_in_activity" />

        <activity
            android:name=".navideAds.NativeBannerInListActivity"
            android:label="@string/native_banner_in_list" />

        <activity
            android:name=".navideAds.NativeVideoActivity"
            android:label="@string/native_video_in_activity" />

        <activity
            android:name=".StandardActivity"
            android:label="@string/standard_banner" />

        <activity
            android:name=".prerollAds.PreRollActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:label="@string/pre_roll" />

    </application>

</manifest>